<section>
    <div class="form-container">
        <H2>Dashboard</H2>
        <div class="grid-container">
            <div class="item1">
                <h3>Submit a Route</h3>
            </div>
            <div class="item4">
                <form class="route-form">

                    <div>
                        <label for="route-name">Choose a route: </label>
                        <select name="route-name" id="route-name">
                            <option value=""></option>
                            {{#each routes.routes as |routes|}}
                            <option value="{{routes.id}}">{{routes.name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div>
                        <label for="route-date">Date Completed:</label>
                        <input type="date" min="today" max="2021-12-31" id="route-date">
                    </div>
                    <div>
                        <label for="ride-time">Ride Time:</label>
                        <input type="text" class="bs-timepicker" id="ride-time" value="00:00">
                    </div>

                    <div>
                        <label for="ride-link">Strava link:</label>
                        <input type="text" id="ride-link" />
                    </div>
                    <div>
                        <label for="route-photo">Photo:</label>
                    </div>
                    <div class="input-group  px-2 py-2  bg-white ">
                        <input id="upload" type="file" onchange="readURL(this);" class="form-control border-0">
                        <label id="upload-label" for="upload" class="font-weight-light text-muted">Choose file</label>
                        <div class="input-group-append">
                            <label for="upload" class="btn btn-light m-0 pill px-4"> <i
                                    class="fa fa-cloud-upload mr-2 text-muted"></i><small
                                    class="text-uppercase font-weight-bold text-muted">Choose file</small></label>
                        </div>
                    </div>
                    <div class="image-area mt-4"><img id="imageResult" src="#" alt=""
                            class="img-fluid rounded shadow-sm mx-auto d-block"></div>
                    <div style="text-align:center; padding-top: 15px">
                        <button type="submit">submit your ride</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section><br>
<hr>
{{!-- User Completed Routes Section --}}
<section>

    {{#if userRoutes.userRoutes }}
    <div class="routes-container">
        <h3 class="completed" align="center">Completed Routes</h3><br>
        {{#each userRoutes.userRoutes as |userRoutes|}}
        <div class="grid-container">
            <div class="item2">
                <table>
                    <tr>
                        <td colspan="3">
                            <h4>{{userRoutes.route.name}}</h4><br>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <p><b>Date Completed:</b> </p>
                        </td>
                        <td>&nbsp;&nbsp;&nbsp;</td>
                        <td>
                            <p>{{userRoutes.date_completed}}</p>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <p><b>Ride time:</b>
                        </td>
                        <td>&nbsp;&nbsp;&nbsp;</td>
                        <td>
                            <p> {{userRoutes.ride_time}}</p>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <p><b>Points:</b> </p>
                        </td>
                        <td>&nbsp;&nbsp;&nbsp;</td>
                        <td>
                            <p> {{userRoutes.route.points}}</p>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <p><b>Approved:</b>
                        </td>
                        <td>&nbsp;&nbsp;&nbsp;</td>
                        <td>
                            {{#if userRoutes.approved}}
                            Yes
                            {{else}}
                            No
                            {{/if}}
                        </td>
                    </tr>
                </table>
            </div>
            <div class="item3">
                <img class="routes-image" src="/images/{{userRoutes.route.map}}" alt="{{userRoutes.route.name}}" />
            </div>
        </div><br>
        {{/each}}
        {{/if}}
</section>

<script>
    $('.bs-timepicker').timepicker({ defaultTime: 'value' });
</script>

<script src="/javascript/dashboard.js"></script>
<script src="/javascript/routesubmit.js"></script>