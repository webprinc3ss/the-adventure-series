<section>
    <h2 class="routes-header">Bike Routes</h2>
    <div class="routes-container">

        {{#each routes}}
        <div class="grid-container">
            <div class="item2">
                <h4>{{this.name}}</h4>
                <br>
                <!--Data-->
                <ul class="no-dot">
                    <li><b>Mileage:</b> {{this.mileage}}</li>
                    <li><b>Points:</b> {{this.points}}</li>
                    <li><b>First bonus:</b> {{this.first_bonus}}</li>
                    <li><b>Difficulty:</b> {{this.difficulty}}</li>
                </ul>

            </div>
            <div class="item3">
                <img class="routes-image" src="/images/{{this.map}}" alt="{{this.name}}" />
            </div>
            <div class="item4">
                <p>{{this.note}}</p>
            </div>
        </div><br><br>
        {{/each}}
</section>